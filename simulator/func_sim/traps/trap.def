//      MIPT                GDB              RISCV                      MIPS
TRAP(NO_TRAP,               GDB_SIGNAL_0,    0x10,                      0)
TRAP(HALT,                  GDB_SIGNAL_0,    0x10,                      0)
TRAP(BREAKPOINT,            GDB_SIGNAL_TRAP, CAUSE_BREAKPOINT,          MIPS_EXC_TR)
TRAP(EXPLICIT_TRAP,         GDB_SIGNAL_TRAP, CAUSE_BREAKPOINT,          MIPS_EXC_BP)
TRAP(SYSCALL,               GDB_SIGNAL_TRAP, CAUSE_USER_ECALL,          MIPS_EXC_SYS)
TRAP(INTEGER_OVERFLOW,      GDB_SIGNAL_TRAP, 0x10,                      MIPS_EXC_OV)
TRAP(UNSUPPORTED_SYSCALL,   GDB_SIGNAL_SYS,  0x10,                      0)
TRAP(UNKNOWN_INSTRUCTION,   GDB_SIGNAL_ILL,  CAUSE_ILLEGAL_INSTRUCTION, MIPS_EXC_RI)
TRAP(RESERVED_INSTRUCTION,  GDB_SIGNAL_ILL,  CAUSE_ILLEGAL_INSTRUCTION, MIPS_EXC_RI)
TRAP(COPROCESSOR_UNUSABLE,  GDB_SIGNAL_ILL,  CAUSE_ILLEGAL_INSTRUCTION, MIPS_EXC_CPU)
TRAP(UNALIGNED_LOAD,        GDB_SIGNAL_BUS,  CAUSE_MISALIGNED_LOAD,     MIPS_EXC_ADEL)
TRAP(UNALIGNED_STORE,       GDB_SIGNAL_BUS,  CAUSE_MISALIGNED_STORE,    MIPS_EXC_ADES)
TRAP(UNALIGNED_FETCH,       GDB_SIGNAL_BUS,  CAUSE_MISALIGNED_FETCH,    MIPS_EXC_ADEL)
TRAP(FP_OVERFLOW,           GDB_SIGNAL_BUS,  0x10,                      MIPS_EXC_FPOVF)
TRAP(FP_UNDERFLOW,          GDB_SIGNAL_BUS,  0x10,                      MIPS_EXC_FPUNDF)
TRAP(FP_DIV_BY_ZERO,        GDB_SIGNAL_BUS,  0x10,                      MIPS_EXC_FPE)
